<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        android:background="#e2e2e2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="8dp"
            android:background="#e2e2e2"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="3dp"

                android:text="Foodname"
                android:textSize="11sp"

                android:id="@+id/tv_lo_foodname"
                android:textColor="#ffb22222"/>
            <View


                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8CBED6"
                android:alpha="0.4"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:textColor="#ffb22222"
                android:text="Username"
                android:textSize="12sp"
                android:id="@+id/tv_lo_username"
               />
            <View


                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8CBED6"
                android:alpha="0.4"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"

                android:text="Fullname"
                android:textSize="12sp"
                android:id="@+id/tv_lo_fullname"
                android:textColor="#000000"/>
            <View


                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8CBED6"
                android:alpha="0.4"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"

                android:text="Location"
                android:textSize="12sp"
                android:id="@+id/tv_lo_location"
                android:textColor="#000000"/>
            <View


                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8CBED6"
                android:alpha="0.4"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"

                android:text="Number"
                android:textSize="12sp"
                android:id="@+id/tv_lo_number"
                android:textColor="#000000"/>

            <View


                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8CBED6"
                android:alpha="0.4"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"

                android:text="Quantity"
                android:textSize="12sp"
                android:id="@+id/tv_lo_quantity"
                android:textColor="#000000"/>

            <View


                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8CBED6"
                android:alpha="0.4"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"

                android:text="Total"
                android:textSize="12sp"
                android:id="@+id/tv_lo_total"
                android:textColor="#000000"/>







        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>