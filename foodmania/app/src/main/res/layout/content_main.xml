<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.foodmania.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="61dp"
        android:id="@+id/ivColdDrink"
        android:src="@drawable/colddrink"/>

    <ImageView
        android:id="@+id/ivFastFood"
        android:src="@drawable/fastfood"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignTop="@+id/ivColdDrink"
        android:layout_marginEnd="27dp"
        android:layout_toStartOf="@+id/ivColdDrink" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignStart="@+id/ivFastFood"
        android:layout_below="@+id/ivFastFood"
        android:layout_marginTop="59dp"
        android:id="@+id/ivHotDrink"
        android:src="@drawable/hotdrink"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignStart="@+id/ivColdDrink"
        android:layout_alignTop="@+id/ivHotDrink"
        android:id="@+id/ivDessert"
        android:src="@drawable/dessert"/>





</RelativeLayout>
